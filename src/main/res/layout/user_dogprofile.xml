<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach">

    <ImageView
        android:id="@+id/img_user_dogimg"
        android:layout_width="277dp"
        android:layout_height="219dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_user_dogname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="99dp"
        android:fontFamily="@font/exo_2"
        android:text="DogName"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user_dogimg" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="47dp"
        android:layout_height="34dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/exo_2"
        android:text="Sex:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_dogname" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="47dp"
        android:layout_height="31dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/exo_2"
        android:text="Age:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/out_user_dogsex"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/sora_light"
        android:text="Male/Female"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/out_user_dogage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_dogname" />

    <TextView
        android:id="@+id/out_user_dogage"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="115dp"
        android:fontFamily="@font/sora_light"
        android:text="dogAge"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/out_user_dogsex" />

    <Button
        android:id="@+id/btn_user_adoptdog"
        android:layout_width="227dp"
        android:layout_height="97dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/sora_light"
        android:text="Adopt"
        android:textAlignment="center"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_user_returntolist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_user_returntolist"
        android:layout_width="149dp"
        android:layout_height="69dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/sora_light"
        android:text="Return"
        android:textAlignment="center"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>